// Test script for the format function in MufiZ
// This demonstrates the string interpolation capability

// Basic string variables
var name = "World";
var language = "MufiZ";

// Numeric variables
var age = 25;
var pi = 3.14159;
var count = 42;

// Boolean variable
var is_active = true;

print("=== Testing format function ===");

// Basic string interpolation
print(format("Hello, {}!", name));

// Multiple placeholders
print(format("Welcome to {}, version {}.", language, "0.10.0"));

// Different data types
print(format("Age: {}, PI: {}, Active: {}", age, pi, is_active));

// Empty placeholders (not enough arguments)
print(format("This has {} and {} placeholders but only {} argument", 1));

// No placeholders
print(format("This string has no placeholders"));

// Escaped braces
print(format("To include braces, double them: {{like this}}"));

// Using f alias function
print("=== Testing f alias function ===");

print(f("Hello, {}!", name));
print(f("The value of pi is approximately {}", pi));
print(f("{} + {} = {}", 2, 2, 4));

// Complex expression (using variables)
print(f("The answer to everything is {}", count));

// Empty string
print(f(""));

// Store formatted string in a variable
var message = f("Welcome to {}, {}!", language, name);
print(message);

print("=== End of format tests ===");
