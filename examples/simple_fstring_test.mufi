// Simple f-string test script for MufiZ

var name = "World";
print(f"Hello, {name}!");  // Should output: Hello, World!

var a = 5;
var b = 10;
print(f"The sum of {a} and {b} is {a + b}");  // Should output: The sum of 5 and 10 is 15

// Multiple interpolations
var x = 42;
var y = "answer";
print(f"The {y} is {x}");  // Should output: The answer is 42

// Empty f-string
print(f"");  // Should output an empty line

// Using f-string in a variable declaration
var result = f"Result: {a * b}";
print(result);  // Should output: Result: 50
