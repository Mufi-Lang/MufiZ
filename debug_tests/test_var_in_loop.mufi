// Test variable declaration in loops
print("Testing variable declaration in loops");

var i = 0;
print("Initial i = " + i);

// Test 1: Reusing i without var
i = 5;
print("After assignment, i = " + i);

// Test 2: Variable in while loop
i = 0;
while (i < 3) {
    var item = "item_" + i;
    print("  " + item);
    i = i + 1;
}

// Test 3: Nested scope
i = 0;
while (i < 2) {
    var j = 0;
    while (j < 2) {
        var item = "i=" + i + ", j=" + j;
        print("  " + item);
        j = j + 1;
    }
    i = i + 1;
}

print("Test completed");
