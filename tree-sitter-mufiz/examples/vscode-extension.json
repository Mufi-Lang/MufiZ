{
  "name": "mufiz",
  "displayName": "MufiZ Language Support",
  "description": "Language support for MufiZ programming language with Tree-sitter",
  "version": "0.1.0",
  "publisher": "mufiz-lang",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Syntax Highlighters"
  ],
  "keywords": [
    "mufiz",
    "programming",
    "language",
    "syntax",
    "highlighting"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "mufiz",
        "aliases": [
          "MufiZ",
          "mufiz"
        ],
        "extensions": [
          ".mufi"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/mufiz-light.svg",
          "dark": "./icons/mufiz-dark.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "mufiz",
        "scopeName": "source.mufiz",
        "path": "./syntaxes/mufiz.tmGrammar.json",
        "treeSitterLanguageId": "mufiz"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "MufiZ",
      "properties": {
        "mufiz.compiler.path": {
          "type": "string",
          "default": "mufiz",
          "description": "Path to the MufiZ compiler executable"
        },
        "mufiz.format.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic formatting"
        },
        "mufiz.linting.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable linting and error checking"
        },
        "mufiz.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server"
        }
      }
    },
    "commands": [
      {
        "command": "mufiz.run",
        "title": "Run MufiZ File",
        "category": "MufiZ"
      },
      {
        "command": "mufiz.check",
        "title": "Check Syntax",
        "category": "MufiZ"
      },
      {
        "command": "mufiz.repl",
        "title": "Open REPL",
        "category": "MufiZ"
      }
    ],
    "keybindings": [
      {
        "command": "mufiz.run",
        "key": "ctrl+f5",
        "mac": "cmd+f5",
        "when": "resourceExtname == .mufi"
      },
      {
        "command": "mufiz.check",
        "key": "ctrl+shift+c",
        "mac": "cmd+shift+c",
        "when": "resourceExtname == .mufi"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "resourceExtname == .mufi",
          "command": "mufiz.run",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "when": "resourceExtname == .mufi",
          "command": "mufiz.run",
          "group": "navigation"
        },
        {
          "when": "resourceExtname == .mufi",
          "command": "mufiz.check",
          "group": "navigation"
        }
      ]
    },
    "snippets": [
      {
        "language": "mufiz",
        "path": "./snippets/mufiz.json"
      }
    ],
    "themes": [
      {
        "label": "MufiZ Dark",
        "uiTheme": "vs-dark",
        "path": "./themes/mufiz-dark-color-theme.json"
      }
    ]
  },
  "activationEvents": [
    "onLanguage:mufiz"
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4",
    "@vscode/test-electron": "^2.2.0",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "tree-sitter": "^0.20.0",
    "tree-sitter-mufiz": "file:../",
    "vscode-languageclient": "^8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Mustafif/MufiZ.git"
  },
  "bugs": {
    "url": "https://github.com/Mustafif/MufiZ/issues"
  },
  "homepage": "https://mufi-lang.mokareads.org",
  "license": "MIT",
  "icon": "icons/mufiz-icon.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  }
}