// Test break and continue in for loops

print "=== Testing FOR loops with break and continue ===";
print "";

print "Test 1: Basic break in for loop";
for (var i = 0; i < 10; i = i + 1) {
    if (i == 5) {
        print "Breaking at i = 5";
        break;
    }
    print i;
}
print "After for loop with break";
print "";

print "Test 2: Basic continue in for loop";
for (var j = 0; j < 10; j = j + 1) {
    if (j % 2 == 0) {
        continue;  // Skip even numbers
    }
    print j;  // Should only print odd numbers: 1, 3, 5, 7, 9
}
print "After for loop with continue";
print "";

print "Test 3: Nested for loops with break and continue";
for (var x = 0; x < 3; x = x + 1) {
    print "Outer loop x = " + x;
    for (var y = 0; y < 5; y = y + 1) {
        if (y == 2) {
            continue;  // Skip y = 2
        }
        if (y == 4) {
            break;  // Break inner loop at y = 4
        }
        print "  Inner loop y = " + y;
    }
}
print "After nested for loops";
print "";

print "Test 4: Complex break/continue logic";
var count = 0;
for (var k = 1; k <= 20; k = k + 1) {
    if (k % 3 == 0) {
        continue;  // Skip multiples of 3
    }
    count = count + 1;
    if (count > 5) {
        break;  // Stop after processing 5 non-multiples of 3
    }
    print "Processed: " + k;
}
print "Total non-multiples of 3 processed: " + count;
print "";

print "Test 5: Continue in for loop with complex increment";
for (var m = 0; m < 20; m = m + 2) {
    if (m < 10) {
        continue;  // Skip values less than 10
    }
    print "Value >= 10: " + m;
}
print "";

print "Test 6: Break in infinite-like for loop";
for (var n = 0; n < 1000000; n = n + 1) {
    print "Iteration: " + n;
    if (n >= 3) {
        print "Breaking infinite loop at n = " + n;
        break;
    }
}
print "Successfully exited loop";
print "";

print "Test 7: Multiple continues with different conditions";
for (var p = 0; p < 15; p = p + 1) {
    if (p % 2 == 0) {
        continue;  // Skip even numbers
    }
    if (p % 3 == 0) {
        continue;  // Skip multiples of 3
    }
    print "Not divisible by 2 or 3: " + p;
}
print "";

print "Test 8: Early break condition";
for (var q = 100; q > 0; q = q - 10) {
    print "Countdown: " + q;
    if (q <= 70) {
        print "Early exit at " + q;
        break;
    }
}
print "";

print "=== All FOR loop tests completed ===";
